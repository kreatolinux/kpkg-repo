#!/bin/sh
NAME="xorriso"
RELEASE="1"
VERSION="1.5.7"
BUILD_DEPENDS="gmake"
SOURCES="https://www.gnu.org/software/xorriso/xorriso-$VERSION.tar.gz"
DEPENDS="readline"
SHA256SUM="SKIP"
DESCRIPTION="GNU xorriso"

build() {
    kpkgConfigure --prefix=/usr
    make
}

package() {
    make DESTDIR=$ROOT install
}
