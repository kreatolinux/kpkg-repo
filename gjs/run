#!/bin/sh
NAME="gjs"
RELEASE="1"
VERSION="1.86.0"
SOURCES="https://gitlab.gnome.org/GNOME/gjs/-/archive/$VERSION/gjs-$VERSION.tar.gz"
DEPENDS="glib js115 libffi cairo dbus gobject-introspection readline dconf"
BUILD_DEPENDS="meson"
SHA256SUM="2d35bc4830f732e88e2c389e7f573bc973378ce0d13725973a75f6d478f55932"
DESCRIPTION="Javascript bindings for GNOME"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    --wrap-mode=nofallback \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
