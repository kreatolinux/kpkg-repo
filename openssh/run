#!/bin/sh                                                                      
NAME="openssh"
RELEASE="2"
VERSION="10.2_p1"
SOURCES="https://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-$VERSION.tar.gz"
DEPENDS="shadow zlib"
BUILD_DEPENDS="gmake"
SHA256SUM="SKIP"
DESCRIPTION="ssh tools"                                                        
build() {                                                                      
    kpkgConfigure --without-zlib-version-check --prefix=/usr                                                  
    make                                                                       
}

package() {
    make DESTDIR="$ROOT" install                                                               
}
