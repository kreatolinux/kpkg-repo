#!/bin/sh
NAME="gstreamer"
RELEASE="1"
VERSION="1.26.9"
SOURCES="https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-$VERSION.tar.xz"
BUILD_DEPENDS="meson gobject-introspection python-setuptools"
DEPENDS="glib"
SHA256SUM="8ee8772e468102ebe86d414d8c4c7440dd91d9f3e9396952ff23aecde80670c8"
DESCRIPTION="gstreamer"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
