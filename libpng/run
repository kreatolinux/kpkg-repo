#!/bin/sh
NAME="libpng"
RELEASE="1"
VERSION="1.6.51"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/glennrp/libpng/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS=""
SHA256SUM="b1872484c1c5c70acc79cbb15fb366df954fa8d5dacbe7f729d858902d17933c"
DESCRIPTION="PNG library"

build() {
    kpkgConfigure --prefix=/usr    \
            --disable-static
    make
}

package() {
    make DESTDIR="$ROOT" install
}
