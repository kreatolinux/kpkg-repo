#!/bin/sh
NAME="grim"
RELEASE="1"
VERSION="1.5.0"
SOURCES="https://gitlab.freedesktop.org/emersion/grim/-/archive/v$VERSION/grim-v$VERSION.tar.gz"
DEPENDS="wayland wayland-protocols pixman libpng"
BUILD_DEPENDS="meson"
SHA256SUM="9e72a98f7621b1f5741b405b8dbd447acf7d300ddb12667ec526db1ce6154eaa"
DESCRIPTION="Grabs images from a Wayland compositor"
build() {                                                                                                              
    meson --prefix=/usr build/                                                                                         
    ninja -C build/                                                                                                    
}

package() {
    DESTDIR=$ROOT ninja -C build/ install                                                                              
}                                                                                                                      
