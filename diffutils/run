#!/bin/sh
NAME="diffutils"
RELEASE="1"
VERSION="3.12"
BUILD_DEPENDS="gmake"
SOURCES="https://ftp.gnu.org/gnu/diffutils/diffutils-$VERSION.tar.xz"
DEPENDS=""
SHA256SUM="7c8b7f9fc8609141fdea9cece85249d308624391ff61dedaf528fcb337727dfd"
DESCRIPTION="GNU diffutils"

build() {
    mkdir -v build
    cd       build
    KPKG_CONFIGURE_PATH=../configure kpkgConfigure \
        --build=$(../config.guess) \
        --disable-nls              \
        --enable-shared            \
        --disable-werror           \
        --enable-64-bit-bfd
    make
}

package() {
    cd build
    make DESTDIR=$ROOT install -j1
}
