#!/bin/sh
NAME="xkeyboard-config"
RELEASE="1"
VERSION="2.46"
SOURCES="https://www.x.org/archive//individual/data/xkeyboard-config/xkeyboard-config-$VERSION.tar.xz"
BUILD_DEPENDS="meson"
SHA256SUM="SKIP"
DESCRIPTION="XKB data description files"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release \
      ..                    
    ninja
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
