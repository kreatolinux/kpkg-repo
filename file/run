#!/bin/sh
NAME="file"
RELEASE="1"
VERSION="5.46"
BUILD_DEPENDS="gmake"
SOURCES="https://astron.com/pub/file/file-$VERSION.tar.gz"
DEPENDS=""
SHA256SUM="fc97f51029bb0e2c9f4e3bffefdaf678f0e039ee872b9de5c002a6d09c784d82"
DESCRIPTION="File tool"
build() {
    kpkgConfigure --prefix=/usr
    make
}

package() {
    make DESTDIR=$ROOT install
}
