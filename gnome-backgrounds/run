#!/bin/sh
NAME="gnome-backgrounds"
RELEASE="1"
VERSION="49.0"
SOURCES="https://gitlab.gnome.org/GNOME/gnome-backgrounds/-/archive/$VERSION/gnome-backgrounds-$VERSION.tar.gz"
BUILD_DEPENDS="meson"
SHA256SUM="d4254738caf443cbed9881d2f64bb22aeab397e651b3e60cecea1b6452dc7edb"
DESCRIPTION="Backgrounds for GNOME"

build() {
    meson setup \
    --prefix=/usr \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
