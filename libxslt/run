#!/bin/sh
NAME="libxslt"
RELEASE="2"
VERSION="1.1.43"
SOURCES="https://download.gnome.org/sources/libxslt/1.1/libxslt-$VERSION.tar.xz"
BUILD_DEPENDS="pkgconf gmake"
DEPENDS="python libxml2"
SHA256SUM="5a3d6b383ca5afc235b171118e90f5ff6aa27e9fea3303065231a6d403f0183a"
DESCRIPTION="XSLT processor based on libxml2"

build() {
    kpkgConfigure --prefix=/usr    \
            --disable-static \
            --with-history   \
            --with-python=/usr/bin/python3
    make
}

package() {
    make DESTDIR=$ROOT install
}
