#!/bin/sh
NAME="gnutls"
RELEASE="1"
VERSION="3.8.11"
BUILD_DEPENDS="gmake"
SOURCES="https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/gnutls-$VERSION.tar.xz"
DEPENDS="libnettle"
SHA256SUM="91bd23c4a86ebc6152e81303d20cf6ceaeb97bc8f84266d0faec6e29f17baa20"
DESCRIPTION="GNU TLS"

build() {
    kpkgConfigure --prefix=/usr --with-included-unistring
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}
