#!/bin/sh
NAME="libdrm"
RELEASE="1"
VERSION="2.4.129"
SOURCES="https://dri.freedesktop.org/libdrm/libdrm-$VERSION.tar.xz"
BUILD_DEPENDS="meson"
DEPENDS="libpciaccess"
SHA256SUM="5978183f978d697e26a50ba066174964efb0ab97caa1ecaa1b861fbe5ddf77dc"
DESCRIPTION="libdrm"

build() {
    meson setup --prefix=/usr --buildtype=release build/
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
