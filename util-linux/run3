name: "util-linux"
version: "2.41.3"
release: "1"
description: "Linux Utilities"
sources:
 - "https://mirrors.edge.kernel.org/pub/linux/utils/util-linux/v2.41/util-linux-${version}.tar.xz"
sha256sum:
 - "3330d873f0fceb5560b89a7dc14e4f3288bbd880e96903ed9b50ec2b5799e58b"
build_depends:
 - "gmake"

build {
 macro build --configure
}

package {
 exec "make DESTDIR=$ROOT install"
}

postinstall {
 exec "cat /etc/group | grep tty || addgroup tty"
}


