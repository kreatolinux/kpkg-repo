#!/bin/sh
NAME="util-linux"
RELEASE="1"
VERSION="2.41.2"
BUILD_DEPENDS="gmake"
SOURCES="https://mirrors.edge.kernel.org/pub/linux/utils/util-linux/v2.41/util-linux-$VERSION.tar.xz"
SHA256SUM="6062a1d89b571a61932e6fc0211f36060c4183568b81ee866cf363bce9f6583e"
DESCRIPTION="Linux Utilities"

build() {
    kpkgConfigure --prefix=/usr
    make
}

package() {
    make DESTDIR=$ROOT install -j1
}

postinstall() {
    cat /etc/group | grep tty || addgroup tty
}
