name: "pigz"
version: "2.8"
release: "1"
description: "Parallel gzip"
sources:
 - "https://zlib.net/pigz/pigz-${version}.tar.gz"
sha256sum:
 - "eb872b4f0e1f0ebe59c9f7bd8c506c4204893ba6a8492de31df416f0d5170fd0"
build_depends:
 - "gmake"

build {
 exec "make"
}

package {
 exec "env install -vDm 0755 pigz \"$ROOT/usr/bin/pigz\""
 exec "env install -vDm 0755 unpigz \"$ROOT/usr/bin/unpigz\""
 exec "ln -s \"pigz\" \"$ROOT/usr/bin/gzip\""
 exec "ln -s \"unpigz\" \"$ROOT/usr/bin/gunzip\""
}


