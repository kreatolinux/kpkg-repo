#!/bin/sh
NAME="libressl"
RELEASE="1"
VERSION="4.2.1"
BUILD_DEPENDS="gmake"
SOURCES="https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-$VERSION.tar.gz"
SHA256SUM="6d5c2f58583588ea791f4c8645004071d00dfa554a5bf788a006ca1eb5abd70b"
DESCRIPTION="TLS library"

build() {
    kpkgConfigure
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}

