#!/bin/sh
NAME="libressl"
RELEASE="1"
VERSION="4.2.1"
BUILD_DEPENDS="gmake"
SOURCES="https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-$VERSION.tar.gz"
SHA256SUM="4d841955f0acc3dfc71d0e3dd35f283af461222350e26843fea9731c0246a1e4"
DESCRIPTION="TLS library"

build() {
    kpkgConfigure
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}

