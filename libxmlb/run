#!/bin/sh
NAME="libxmlb"
RELEASE="1"
VERSION="0.3.24"
SOURCES="https://github.com/hughsie/libxmlb/releases/download/$VERSION/libxmlb-$VERSION.tar.xz"
BUILD_DEPENDS="meson ninja"
DEPENDS="glib gobject-introspection"
SHA256SUM="ded52667aac942bb1ff4d1e977e8274a9432d99033d86918feb82ade82b8e001"
DESCRIPTION="A library to help create and query binary XML blobs"

build() {
    meson setup \
    --prefix=/usr \
    -Dgtkdoc=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
