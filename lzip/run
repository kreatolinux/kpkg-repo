#!/bin/sh
NAME="lzip"
RELEASE="1"
VERSION="1.25"
BUILD_DEPENDS="gmake"
SOURCES="https://download.savannah.gnu.org/releases/lzip/lzip-$VERSION.tar.gz"
SHA256SUM="09418a6d8fb83f5113f5bd856e09703df5d37bae0308c668d0f346e3d3f0a56f"
DESCRIPTION="A lossless data compressor"

build() {
    kpkgConfigure --prefix=/usr
    make
}

package() {
    make install 
}
