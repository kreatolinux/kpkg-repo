#!/bin/sh
NAME="libadwaita"
RELEASE="1"
VERSION="1.8.2"
SOURCES="https://gitlab.gnome.org/GNOME/libadwaita/-/archive/$VERSION/libadwaita-$VERSION.tar.gz"
DEPENDS="gtk4"
BUILD_DEPENDS="meson vala sassc"
SHA256SUM="685126cfd2e4e3bf18f795083bc9a09c156e0bfa2ccfd219fff96e6e806782eb"
DESCRIPTION="GNOME ui stuff"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    -Dgtk_doc=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
