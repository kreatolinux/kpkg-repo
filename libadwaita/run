#!/bin/sh
NAME="libadwaita"
RELEASE="1"
VERSION="1.8.2"
SOURCES="https://gitlab.gnome.org/GNOME/libadwaita/-/archive/$VERSION/libadwaita-$VERSION.tar.gz"
DEPENDS="gtk4"
BUILD_DEPENDS="meson vala sassc"
SHA256SUM="361c70e88ae3f60e928d83a7182994a8b52e3111f9b49905545f40f9a3c8bcd3"
DESCRIPTION="GNOME ui stuff"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    -Dgtk_doc=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
