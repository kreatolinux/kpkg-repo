name: "m4"
version: "1.4.20"
release: "1"
description: "GNU m4"
sources:
 - "https://ftp.gnu.org/gnu/m4/m4-${version}.tar.gz"
sha256sum:
 - "6ac4fc31ce440debe63987c2ebbf9d7b6634e67a7c3279257dc7361de8bdb3ef"
build_depends:
 - "gmake"

build {
# Work around GCC 15 compatibility issue with gnulib's nodiscard attribute
 env CFLAGS="${CFLAGS} -Wno-attributes -D_GL_ATTRIBUTE_NODISCARD="
 macro build
}

package {
 macro package
 exec "rm -rf \"$ROOT/usr/share/info/dir\""
}


