#!/bin/sh
NAME="mpc"
RELEASE="1"
VERSION="1.2.1"
BUILD_DEPENDS="gmake"
SOURCES="https://ftp.gnu.org/gnu/mpc/mpc-$VERSION.tar.gz"
DEPENDS=""
SHA256SUM="SKIP"
DESCRIPTION="GNU MPC"

build() {
    kpkgConfigure --prefix=/usr
    make -j$(nproc)
}

package() {
    make DESTDIR=$ROOT install
    rm -rf "$ROOT/usr/share/info/dir"
}
