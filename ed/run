#!/bin/sh
NAME="ed"
RELEASE="1"
VERSION="1.22.3"
SOURCES="https://ftp.gnu.org/gnu/ed/ed-$VERSION.tar.lz"
BUILD_DEPENDS="lzip gmake"
SHA256SUM="47a55ddfc52d4a1ff6f7559fbd00cf948a16b6cf151ec520392761aeae4e97be"
DESCRIPTION="A line-oriented text editor"

build() {
    kpkgConfigure --prefix=/usr
    make
}

package() {
    make install 
}
