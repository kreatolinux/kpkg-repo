#!/bin/sh
NAME="mold"
RELEASE="1"
VERSION="2.39.1"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/rui314/mold/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="cmake"
SHA256SUM="231ea3643a14fe5b88478c97b68b31f7c975b57b247a81356ffd889d015b5cc1"
DESCRIPTION="A Modern Linker"

build() {
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=c++ -DCMAKE_INSTALL_PREFIX=/usr ..
    cmake --build . -j $(nproc)
}

package() {
	cmake --install build
}
