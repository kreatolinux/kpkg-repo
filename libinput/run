#!/bin/sh
NAME="libinput"
RELEASE="1"
VERSION=1.30.1
SOURCES="https://gitlab.freedesktop.org/libinput/libinput/-/archive/$VERSION/libinput-$VERSION.tar.gz"
DEPENDS="libevdev mtdev eudev"
BUILD_DEPENDS="meson"
SHA256SUM="4339a2b9cc96ede3c120dedaedc61e48ce567808c5229e66587525ea972ef617"
DESCRIPTION="Library that handles input devices"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Ddebug-gui=false     \
      -Dtests=false         \
      -Dlibwacom=false      \
      ..                    
    ninja
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
