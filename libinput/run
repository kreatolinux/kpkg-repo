#!/bin/sh
NAME="libinput"
RELEASE="1"
VERSION=1.30.0
SOURCES="https://gitlab.freedesktop.org/libinput/libinput/-/archive/$VERSION/libinput-$VERSION.tar.gz"
DEPENDS="libevdev mtdev eudev"
BUILD_DEPENDS="meson"
SHA256SUM="fcce701746b8f5ee57c6724e963496d2223a9639856c6d1b811cff38e6dd4465"
DESCRIPTION="Library that handles input devices"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Ddebug-gui=false     \
      -Dtests=false         \
      -Dlibwacom=false      \
      ..                    
    ninja
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
