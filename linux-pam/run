#!/bin/sh
NAME="linux-pam"
RELEASE="4"
VERSION="1.5.3"
SOURCES="https://github.com/linux-pam/linux-pam/releases/download/v$VERSION/Linux-PAM-$VERSION.tar.xz;pam.d/other;pam.d/system-account;pam.d/system-auth;pam.d/system-password;pam.d/system-session;pam.d/login"
SHA256SUM="7ac4b50feee004a9fa88f1dfd2d2fa738a82896763050cd773b3c54b0a818283  Linux-PAM-1.5.3.tar.xz;b75c8f08585e25ad5fbc1d78ef6256dcea052e0ce630ddb32e694a63fa979380  other;a8295e4780b323cac83ca08c65c8cd47ca26e516d64ed857fd3f4ac1f1a8ccc4  system-account;da912d0b5fe0ee9d70403ca88402974f2c24b6dfeb2c8adc037c72297a859590  system-auth;29ef099774837bf3fe01ef6b22fc87ac55bf222a4c0f8544d007f57b6aa4b61a  system-password;01a02779791bc29e111b9f7e29dd1f2c0ea0ae750b43ac87a25c26e6dd4d8173  system-session;216eb2abc095566afa0ed5394f5b32765d3e3b63295c0e972ecd8ebda1a734d2  login"
DESCRIPTION="Pluggable Authentication Modules for Linux"

prepare() { 
  mkdir pam.d
  
  for i in other system-account system-auth system-password system-session login
  do
    cp -f "$i" "pam.d/$i"
  done

  tar -xvf Linux-PAM-$VERSION.tar.xz
  cd Linux-PAM-$VERSION
}

build() {
    cd Linux-PAM-$VERSION
    ./configure --prefix=/usr --enable-securedir=/usr/lib/security
    make
}

package() {
    cd Linux-PAM-$VERSION
    make DESTDIR=$ROOT install
    mkdir -p "$ROOT/etc/pam.d"
    cp -rf ../pam.d/* "$ROOT/etc/pam.d/" 
}
