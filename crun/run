#!/bin/sh
NAME="crun"
RELEASE="1"
VERSION="1.25.1"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/containers/crun/releases/download/$VERSION/crun-$VERSION.tar.gz"
DEPENDS="libseccomp libcap yajl"
SHA256SUM="3d23b434fe98711a041c608e1f11dc775d8b74f547167c2b9a640825edd6730a"
DESCRIPTION="A fast and lightweight fully featured OCI runtime and C library for running containers"

build() {
    kpkgConfigure --disable-systemd --prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
