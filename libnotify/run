#!/bin/sh
NAME="libnotify"
RELEASE="1"
VERSION="0.8.7"
SOURCES="https://gitlab.gnome.org/GNOME/libnotify/-/archive/$VERSION/libnotify-$VERSION.tar.gz"
BUILD_DEPENDS="meson"
DEPENDS="gdk-pixbuf gobject-introspection"
SHA256SUM="a48d5d5b7221a63a94bcff549789cf7185a686207c9c8757a927450923e0be7d"
DESCRIPTION="Notification library"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    -Dtests=false \
    -Dman=false \
    -Dgtk_doc=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
