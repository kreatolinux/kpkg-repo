#!/bin/sh
NAME="libsecret"
RELEASE="1"
VERSION="0.21.7"
SOURCES="https://download.gnome.org/sources/libsecret/0.21/libsecret-$VERSION.tar.xz"
DEPENDS="glib libgcrypt gobject-introspection vala"
BUILD_DEPENDS="meson"
SHA256SUM="6b452e4750590a2b5617adc40026f28d2f4903de15f1250e1d1c40bfd68ed55e"
DESCRIPTION="A GObject-based library for accessing the Secret Service API"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    -Dgtk_doc=false \
    -Dmanpage=false	\
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
