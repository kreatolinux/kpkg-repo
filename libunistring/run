#!/bin/sh
NAME="libunistring"
RELEASE="1"
VERSION="1.4.1"
BUILD_DEPENDS="gmake"
SOURCES="https://ftp.gnu.org/gnu/libunistring/libunistring-$VERSION.tar.xz"
SHA256SUM="67d88430892527861903788868c77802a217b0959990f7449f2976126a307763"
DESCRIPTION="libunistring"

build() {
    kpkgConfigure --prefix=/usr \
	    	--disable-static
    make
}

package() {
    make DESTDIR=$ROOT install
}
