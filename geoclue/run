#!/bin/sh
NAME="geoclue"
RELEASE="2"
VERSION="2.8.0"
SOURCES="https://gitlab.freedesktop.org/geoclue/geoclue/-/archive/$VERSION/geoclue-$VERSION.tar.gz" 
BUILD_DEPENDS="meson"
DEPENDS="libnotify libsoup json-glib glib"
SHA256SUM="8d1804b3d9d51c2a17af67c882ff5f9169724e248d39ccc3cfa8dba5d9323be7"
DESCRIPTION="A D-Bus geoinformation service"

build() {
    meson setup \
    --prefix=/usr \
    --sysconfdir=/etc \
    --buildtype=release \
    -Dmodem-gps-source=false \
    -D3g-source=false \
    -Dcdma-source=false \
    -Dgtk-doc=false \
    -Dnmea-source=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
