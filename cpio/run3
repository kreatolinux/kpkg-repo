name: "cpio"
version: "2.15"
release: "1"
description: "GNU cpio"
sources:
  - "https://ftp.gnu.org/gnu/cpio/cpio-$VERSION.tar.gz"
sha256sum:
  - "efa50ef983137eefc0a02fdb51509d624b5e3295c980aa127ceee4183455499e"
build_depends:
  - "gmake"

build {
  exec "patch -p1 < $REPO_DIR/$NAME/patches/0001-src-global.c-drop-duplicate-definition-of-program_na.patch"
  macro build --prefix=/usr
  exec "make"
}

package {
  exec "make DESTDIR=$ROOT install"
}

