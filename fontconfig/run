#!/bin/sh
NAME="fontconfig"
RELEASE="1"
VERSION="2.17.1"
BUILD_DEPENDS="gmake"
SOURCES="https://www.freedesktop.org/software/fontconfig/release/fontconfig-$VERSION.tar.gz"
DEPENDS="expat freetype gperf pkgconf"
SHA256SUM="SKIP"
DESCRIPTION="fontconfig"
build() {
    kpkgConfigure --prefix=/usr
    make
}

package() {
    make DESTDIR=$ROOT install
}
