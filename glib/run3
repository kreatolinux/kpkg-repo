name: "glib"
version: "2.86.3"
release: "2"
description: "Low-level core library that forms the basis for projects such as GTK+ and GNOME"
sources:
 - "https://download.gnome.org/sources/glib/2.86/glib-${version}.tar.xz"
sha256sum:
 - "b3211d8d34b9df5dca05787ef0ad5d7ca75dec998b970e1aab0001d229977c65"
build_depends:
 - "meson"
 - "ninja"
 - "gobject-introspection"
 - "python-setuptools"
 - "python-packaging"
bootstrap_depends:
 - "meson"
 - "ninja"
 - "python-setuptools"
 - "python-packaging"

build {
 local INTROSPECTION = "enabled"
 if "${KPKG_BOOTSTRAP}" == "1" {
   global INTROSPECTION = "disabled"
 }

 print "debug: introspection is $INTROSPECTION"

 macro build -Dintrospection=$INTROSPECTION
}

package {
 macro package
}


