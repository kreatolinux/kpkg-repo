name: "wpa_supplicant"
version: "2.10"
release: "3"
description: "WPA client"
sources:
  - "https://w1.fi/releases/wpa_supplicant-$version.tar.gz"
sha256sum:
  - "20df7ae5154b3830355f8ab4269123a87affdea59fe74fe9292a91d0d7e17b2f"
depends:
  - "openssl"
  - "dbus"
  - "libnl"
  - "libxml2"
  - "readline"
  - "pkgconf"
build_depends:
  - "gmake"

build {
  write "wpa_supplicant/.config" """
CONFIG_BACKEND=file
CONFIG_CTRL_IFACE=y
CONFIG_DEBUG_FILE=y
CONFIG_DEBUG_SYSLOG=y
CONFIG_DEBUG_SYSLOG_FACILITY=LOG_DAEMON
CONFIG_DRIVER_NL80211=y
CONFIG_DRIVER_WEXT=y
CONFIG_DRIVER_WIRED=y
CONFIG_EAP_GTC=y
CONFIG_EAP_LEAP=y
CONFIG_EAP_MD5=y
CONFIG_EAP_MSCHAPV2=y
CONFIG_EAP_OTP=y
CONFIG_EAP_PEAP=y
CONFIG_EAP_TLS=y
CONFIG_EAP_TTLS=y
CONFIG_IEEE8021X_EAPOL=y
CONFIG_IPV6=y
CONFIG_LIBNL32=y
CONFIG_PEERKEY=y
CONFIG_PKCS12=y
CONFIG_CTRL_IFACE_DBUS=y
CONFIG_CTRL_IFACE_DBUS_NEW=y
CONFIG_CTRL_IFACE_DBUS_INTRO=y
CONFIG_READLINE=y
CONFIG_SMARTCARD=y
CONFIG_WPS=y
CFLAGS += -I/usr/include/libnl3
"""
  cd "wpa_supplicant/"
  exec "make BINDIR=/usr/sbin LIBDIR=/usr/lib -j$(nproc)"
}

package {
  cd "wpa_supplicant"
  exec "make BINDIR=/usr/sbin LIBDIR=/usr/lib DESTDIR=$ROOT install"
  # from blfs
  exec "mkdir $ROOT/usr/share/dbus-1/system-services"
  exec "install -v -m644 dbus/fi.w1.wpa_supplicant1.service  $ROOT/usr/share/dbus-1/system-services/"
  exec "install -v -d -m755 $ROOT/etc/dbus-1/system.d"
  exec "install -v -m644 dbus/dbus-wpa_supplicant.conf  $ROOT/etc/dbus-1/system.d/wpa_supplicant.conf"
  exec "if command -v systemctl > /dev/null; then"
  exec "mkdir -p $ROOT/usr/lib/systemd/system"
  exec "install -v -m644 systemd/*.service $ROOT/usr/lib/systemd/system/"
  exec "fi"
}

